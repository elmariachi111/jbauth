{% extends 'base.html.twig' %}
{% block jumbotron %}
    <div class="jumbotron">
        <div class="container">
            <h1>This is secured by OAuth2</h1>
            <h2>Good to see you, <b>{{ app.user.username }}</b></h2>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <p>
                Your OAuth token will expire in
                {{ "%02d"|format(date(accessToken.expiresAt).diff(date()).i) }}
                :
                {{ "%02d"|format(date(accessToken.expiresAt).diff(date()).s) }} minutes.
                ({{ date(accessToken.expiresAt)|date('d.m.Y H:i:s') }})
            </p>
            <h3>Your scopes are</h3>
            <blockquote>
                <p> {{ accessToken.scope }}</p>
            </blockquote>
        </div>
    </div>
{% endblock %}