{% extends 'base.html.twig' %}

{% block jumbotron %}
<div class="jumbotron">
    <div class="container">
        <h1>This is index</h1>
    </div>
</div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-4">
            <h2>Basic Auth</h2>
            <p><a class="btn btn-primary" href="{{ path('secret_basic_auth') }}" role="button">Basic Auth &raquo;</a></p>
        </div>

        <div class="col-md-4">
            <h2>OAuth2</h2>
            {{ form(oauthForm) }}
            <form method="GET" action="{{ path('secret_oauth') }}">
                <div class="input-group">
                    <input type="text" name="access_token" class="form-control" value="" placeholder="get an access token first" />
                    <span class="input-group-btn">
                        <button class="btn btn-warning" type="submit">Go!</button>
                    </span>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <h2>JWT</h2>
            {{ form(jwtForm) }}

            <form method="GET" action="{{ path('secret_jwt') }}">
                <div class="input-group">
                    <input type="text" name="bearer" class="form-control" value="" placeholder="get a jwt first" />
                    <span class="input-group-btn">
                        <button class="btn btn-success" type="submit">Go!</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

